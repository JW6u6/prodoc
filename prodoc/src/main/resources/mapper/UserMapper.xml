<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prodoc.user.mapper.UserMapper">

	<select id="selectUser" resultType="UserVO">
		SELECT * FROM TBL_USER
		WHERE email= #{email} 
		<if test="password != null and password != ''"> AND password = #{password} </if>
	</select>
	
	<insert id="insertUser" parameterType="UserVO" statementType="CALLABLE">
		{call JOIN_PROCESS(
						#{email}
						, #{password}
						, #{phone}
						, #{nickname}
						, #{platform}
						, #{profile}
						, #{birth}
						, #{pMain, mode=OUT, jdbcType=VARCHAR, javaType=string}
		)}
	</insert>
	
	<delete id="deleteUser" parameterType="UserVO">
		DELETE FROM TBL_USER WHERE email= #{email}
	</delete>
	
	<update id="updateUser" parameterType="UserVO">
		UPDATE TBL_USER
		SET	<if test="nickname != ''"> nickname = #{nickname} </if>
			<if test="password != ''"> , password = #{password} </if>
			<if test="profile != null"> , profile = #{profile} </if>
			<if test="phone != ''"> , phone = #{phone} </if>
			<if test="birth != null"> , birth = #{birth} </if>
		WHERE email = #{email}
	</update>
</mapper>